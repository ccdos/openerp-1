<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <report 
	         id="stock.report_picking_list" 
	         model="stock.picking" 
	         name="stock.picking.list_extend" 
	         string="Picking Slip" 
	         rml="stock_extend/report/picking.rml"
	    />
        <report 
	        id="stock.report_picking_list_in" 
	        model="stock.picking.in" 
	        name="stock.picking.list_extend.in" 
	        string="Receipt Slip" 
	        rml="stock_extend/report/picking.rml"
	    />
        <report id="stock.report_picking_list_out" 
	        model="stock.picking.out" 
	        name="stock.picking.list_extend.out" 
	        string="Delivery Slip" 
	        rml="stock_extend/report/picking.rml"
	    />
	    <record model="ir.ui.view" id="stock_picking_out_form_extend">
	        <field name="name">stock.picking.out.form.extend</field>
	        <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='auto_picking']" position="after">
	           		<field name="seals_first" />
	           		<field name="seals_last" />  
	            </xpath>
	            <xpath expr="//field[@name='date_done']" position="before">
	            	<field name="tare" on_change="weight_manual_change(tare,weight_net_manual)"/>
	           		<field name="volume" />
	            </xpath>
	       	</field>
       </record> 
          
		<record model="ir.ui.view" id="view_picking_withcarrier_out_form_extend">
	        <field name="name">view.picking.withcarrier.out.form.extend</field>
	        <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='weight']" position="replace">
	            	<field name="weight_manual" on_change="tare_change(weight_net_manual,weight_manual)"/>
	            </xpath>  
	            <xpath expr="//field[@name='weight_net']" position="replace">
	            	<field name="weight_net_manual" on_change="tare_change(weight_net_manual,weight_manual)"/>
	            </xpath>  
	       	</field>
       </record>    
       
                         
    </data>
</openerp>